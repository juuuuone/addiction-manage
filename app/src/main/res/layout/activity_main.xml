<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_circle_24px"
        android:background="#FFFFFF"
        android:contentDescription="myPageButton"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/button_beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beer"
        android:drawableLeft="@drawable/beer"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="beer"
        />

    <Button
        android:id="@+id/button_cham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cham"
        android:drawableLeft="@drawable/cham"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="cham"
        />

    <Button
        android:id="@+id/button_mgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mgl"
        android:drawableLeft="@drawable/mgl"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="mgl"
        />

    <Button
        android:id="@+id/button_soju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="soju"
        android:drawableLeft="@drawable/soju"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="soju"
        />

    <Button
        android:id="@+id/button_wine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wine"
        android:drawableLeft="@drawable/wine"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="wine"
        />

    <Button
        android:id="@+id/button_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coffee"
        android:drawableLeft="@drawable/coffee"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="coffee"
        />

    <Button
        android:id="@+id/button_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="energy"
        android:drawableLeft="@drawable/energy"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="energy"
        />




    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxDate="12/31/2090"
    android:minDate="01/01/1990"
    />


    <TextView
    android:background="@color/black"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:text="날짜"
    android:textColor="@android:color/white"
    android:textSize="25sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical" />




</LinearLayout>